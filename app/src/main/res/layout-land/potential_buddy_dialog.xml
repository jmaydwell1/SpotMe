<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/potential_picture_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/spotMe_darkerBlue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="20dp"
            android:background="@color/spotMe_darkerBlue">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/potential_big_picture"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adam_smith"
                app:shapeAppearanceOverlay="@style/roundImgView"
                android:layout_marginLeft="30dp"
                app:strokeWidth="8dp"
                app:strokeColor="@color/spotMe_offWhite"/>

            <LinearLayout
                android:id="@+id/linear_layout_potential"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/potential_picture_card"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/potential_big_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Contact Name"
                    android:textColor="@color/spotMe_offWhite"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/potential_big_gender_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_light"
                    android:text="Gender, Age"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/spotMe_offWhite"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="0.5 miles away"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/spotMe_offWhite"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/potential_big_sport1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/soccer_icon" />

                    <ImageView
                        android:id="@+id/potential_big_sport2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/pingpong_icon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>