<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/potential_picture_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/spotMe_grey"
        app:strokeWidth="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="20dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/potential_big_picture"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adam_smith"
                app:shapeAppearanceOverlay="@style/roundImgView"
                android:layout_marginLeft="30dp" />

            <LinearLayout
                android:id="@+id/linear_layout_potential"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:gravity="start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/potential_picture_card"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/potential_big_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Contact Name"
                    android:textColor="@color/spotMe_darkerBlue"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/potential_big_gender_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_light"
                    android:text="Gender, Age"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="0.5 miles away"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/potential_big_sport_icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/potential_big_soccer_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            android:contentDescription="@string/sporticon"
                            app:srcCompat="@drawable/soccer_icon" />

                        <ImageView
                            android:id="@+id/potential_big_pingpong_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:contentDescription="@string/sporticon"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            app:srcCompat="@drawable/pingpong_icon" />

                        <ImageView
                            android:id="@+id/potential_big_yoga_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            android:contentDescription="@string/sporticon"
                            app:srcCompat="@drawable/pingpong_icon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/potential_big_ski_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            android:contentDescription="@string/sporticon"
                            app:srcCompat="@drawable/soccer_icon" />

                        <ImageView
                            android:id="@+id/potential_big_swimming_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            android:contentDescription="@string/sporticon"
                            app:srcCompat="@drawable/pingpong_icon" />

                        <ImageView
                            android:id="@+id/potential_big_running_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="3dp"
                            android:visibility="visible"
                            android:contentDescription="@string/sporticon"
                            app:srcCompat="@drawable/pingpong_icon" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>