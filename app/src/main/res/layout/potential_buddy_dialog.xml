<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/spotMe_darkerBlue"
        app:cardBackgroundColor="@color/spotMe_darkerBlue"
        app:cardCornerRadius="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@color/spotMe_darkerBlue"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/potential_big_picture"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adam_smith"
                app:shapeAppearanceOverlay="@style/roundImgView"
                app:strokeWidth="8dp"
                app:strokeColor="@color/spotMe_offWhite"/>

            <TextView
                android:id="@+id/potential_big_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal"
                android:text="Contact Name"
                android:textColor="@color/spotMe_offWhite"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/potential_big_gender_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="Gender, Age"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/spotMe_offWhite"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="0.5 miles away"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/spotMe_offWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/potential_big_sport1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/soccer_icon"
                    />

                <ImageView
                    android:id="@+id/potential_big_sport2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pingpong_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>