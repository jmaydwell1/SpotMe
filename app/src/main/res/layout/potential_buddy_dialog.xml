<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        app:strokeColor="@color/spotMe_grey"
        app:strokeWidth="6dp"
        android:layout_margin="5dp"
        >
<!--        android:background="@color/spotMe_darkerBlue"-->
<!--        app:cardBackgroundColor="@color/spotMe_darkerBlue"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_margin="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/potential_big_picture"
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adam_smith"
                app:shapeAppearanceOverlay="@style/roundImgView" />

            <TextView
                android:id="@+id/potential_big_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_horizontal"
                android:text="Contact Name"
                android:textColor="@color/spotMe_darkerBlue"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/potential_big_gender_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="Gender, Age"
                android:textSize="18sp"
            android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="0.5 miles away"
                android:textSize="16sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/potential_big_sport_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/potential_big_soccer_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        android:contentDescription="@string/sporticon"
                        app:srcCompat="@drawable/soccer_icon" />

                    <ImageView
                        android:id="@+id/potential_big_pingpong_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:contentDescription="@string/sporticon"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/pingpong_icon" />

                    <ImageView
                        android:id="@+id/potential_big_yoga_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        android:contentDescription="@string/sporticon"
                        app:srcCompat="@drawable/pingpong_icon" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/potential_big_ski_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        android:contentDescription="@string/sporticon"
                        app:srcCompat="@drawable/soccer_icon" />

                    <ImageView
                        android:id="@+id/potential_big_swimming_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        android:contentDescription="@string/sporticon"
                        app:srcCompat="@drawable/pingpong_icon" />

                    <ImageView
                        android:id="@+id/potential_big_running_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="3dp"
                        android:visibility="visible"
                        android:contentDescription="@string/sporticon"
                        app:srcCompat="@drawable/pingpong_icon" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>