<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingVertical="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="250dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/potential_big_picture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/adam_smith" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/potential_big_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_horizontal"
            android:text="Contact Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/potential_big_gender_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_horizontal"
            android:text="Gender, Age"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_horizontal"
            android:text="0.5 miles away"
            android:textSize="16sp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/potential_big_sport1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/soccer_icon" />

            <ImageView
                android:id="@+id/potential_big_sport2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/pingpong_icon" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>